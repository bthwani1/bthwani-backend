{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "typeRoots": ["./types"],
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src", "scripts/wipe-er.js"],   // ✅ تبسيط لتشمل كل الملفات
  "exclude": ["node_modules", "dist"]
}
